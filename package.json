{
  "name": "@mapbox/react-colorpickr",
  "version": "4.3.0",
  "description": "A React colorpicker",
  "main": "dist/colorpickr.js",
  "scripts": {
    "test": "npm run lint && mocha --recursive --compilers js:babel-register test",
    "lint": "eslint --no-eslintrc -c .eslintrc index.js src",
    "start": "budo example/bundle.js --serve=example/bundle.js --live -d -- -t babelify",
    "build": "babel src -d dist",
    "build-example": "NODE_ENV=production browserify -t babelify example/index.js | uglifyjs -c -m > example/bundle.js"
  },
  "babel": {
    "presets": [
      "react",
      "es2015",
      "stage-0"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:mapbox/react-colorpickr.git"
  },
  "keywords": [
    "react",
    "ui",
    "color"
  ],
  "author": "mapbox",
  "license": "BSD-3-Clause",
  "dependencies": {
    "clamp": "^1.0.1",
    "colr-convert": "^1.0.4",
    "tinycolor2": "^1.3.0"
  },
  "peerDependencies": {
    "react": "^0.14.0 || ^15.0.0",
    "react-dom": "^0.14.0 || ^15.0.0"
  },
  "devDependencies": {
    "babel-cli": "^6.3.17",
    "babel-eslint": "5.0.0-beta10",
    "babel-preset-es2015": "^6.3.13",
    "babel-preset-react": "^6.3.13",
    "babel-preset-stage-0": "^6.3.13",
    "babel-register": "^6.3.13",
    "babelify": "^7.2.0",
    "browserify": "^9.0.8",
    "budo": "^8.0.2",
    "enzyme": "^2.4.1",
    "eslint": "^1.10.3",
    "eslint-plugin-react": "^3.11.2",
    "expect": "^1.13.4",
    "jsdom": "^7.2.1",
    "mocha": "^2.3.4",
    "react": "^15.0.0",
    "react-addons-test-utils": "^15.0.0",
    "react-dom": "^15.0.0",
    "react-hot-loader": "^1.2.9",
    "sinon": "^1.17.2",
    "tap-status": "^1.0.1",
    "uglify-js": "^2.4.20"
  }
}