{
  "name": "react-colorpickr",
  "version": "1.4.0",
  "description": "A React colorpicker",
  "main": "index.js",
  "browserify": {
    "transform": [
      "babelify"
    ]
  },
  "scripts": {
    "test": "npm run lint && browserify test/test.js | tap-closer | smokestack | faucet",
    "lint": "eslint --no-eslintrc -c .eslintrc index.js src",
    "start": "watchify example/index.js -o example/bundle.js & st -nc"
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:mapbox/react-colorpickr.git"
  },
  "keywords": [
    "react",
    "ui",
    "color"
  ],
  "author": "mapbox",
  "license": "BSD",
  "dependencies": {
    "colr-convert": "^1.0.4",
    "csscolorparser": "^1.0.2",
    "react": "^0.13.2",
    "store": "^1.3.17",
    "xtend": "^4.0.0"
  },
  "devDependencies": {
    "babel-eslint": "^3.0.1",
    "babelify": "^6.0.2",
    "browserify": "^9.0.8",
    "eslint": "^0.20.0",
    "eslint-plugin-react": "^2.2.0",
    "faucet": "0.0.1",
    "smokestack": "^3.3.0",
    "st": "^0.5.4",
    "tap-closer": "^1.0.0",
    "tape": "^4.0.0",
    "uglify-js": "^2.4.20",
    "watchify": "^3.2.1"
  }
}
